{{ 'backed-by-ingredients.css' | asset_url | stylesheet_tag }}

<!-- READ EVERY COMMENT CAREFULLY PLEASE -->
<section class="container">
  <div class="row number-flex">
    <div class="col-1">
      <h1>{{ section.settings.heading }}</h1>
      
  <div class="side-panel product-information-drawer" id="Product-Information-Drawer" tabindex="-1">
    <div class="side-panel-inner">
      <div class="side-panel-header">
        <div>
          <span class="h6">{{ 'products.product.product_information' | t }}</span>
          <side-panel-close class="side-panel-close">{%- render 'svg-icons' with 'close' -%}</side-panel-close>
        </div>
      </div>
      <div class="side-panel-content side-panel-content--has-tabs">
        <side-panel-content-tabs class="side-panel-content--tabs">
            <button class="tab-active">{{ section.settings.side_panel_1_label }}</button>
        </side-panel-content-tabs>
        <div class="side-panel-content--inner">
            <div class="side-panel-content--tab-panel rte tab-active">
              {{ section.settings.side_panel_1_page.content }}
            </div>

        </div>
      </div>
    </div>
  </div>
      <div class="col-1 mobile-hide">
                <side-panel-links class="side-panel-links">
                  <button
                    class="btn side-panel-links--link no-js-hidden"
                    data-id="1"
                    style="width: 100%; padding: 16px 0px;"
                  >
                    <span class="btn custom-btn">VIEW NUTRITION FACTS</span>
                  </button>
                </side-panel-links>
          </div>  
    </div>
    <div class="col-2">
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat1 }}</h1>
        </div>
        <p>{{ section.settings.desc1 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat2 }}</h1>
        </div>
        <p>{{ section.settings.desc2 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid"
            loading="lazy"
          />
          <h1>{{ section.settings.stat3 }}</h1>
        </div>
        <p>{{ section.settings.desc3 }}</p>
      </div>
            
          {% for block in section.blocks %}  
   <div class="popup_button_flex">
  {% if block.settings.button_text_one != blank %}
  <button class="customization_popup_trigger custom-btn custom-btn2" data-target="content1">{{ block.settings.button_text_one }}</button>
  {% endif %}
    {% if block.settings.button_text_two != blank %}
   <button class="customization_popup_trigger custom-btn custom-btn2" data-target="content2">{{ block.settings.button_text_two }}</button>
   {% endif %}
   </div>
    <div class="customization_popup" role="alert">
        <div class="customization_popup_container">
            <div id="content1" class="customization_popup_content">
              {% if block.settings.title_one != blank %}
                <div class="popup_information">{{ block.settings.title_one }}</div>
                {% endif %}
               {% if block.settings.content_one != blank %}
                <div class="popup_content_information">{{ block.settings.content_one }}</div>
                 {% endif %}
               {% if block.settings.image_one != blank %}
                <img src="{{ block.settings.image_one | img_url: 'master' }}" alt="Image 1">
                 {% endif %}
                <a href="#0" class="customization_popup_close img-replace">X</a>
            </div>
            <div id="content2" class="customization_popup_content">
              {% if block.settings.title_two != blank %}
             <div class="popup_information">{{ block.settings.title_two }}</div>
                {% endif %}
                {% if block.settings.content_two != blank %}
                <div class="popup_content_information">{{ block.settings.content_two }}</div>
                  {% endif %}
                {% if block.settings.image_two != blank %}
                <img src="{{ block.settings.image_two | img_url: 'master' }}" alt="Image 2">
                  {% endif %}
                <a href="#0" class="customization_popup_close img-replace">X</a>
            </div>
        </div>
    </div>
  {% endfor %}
            
    </div>
  </div>
</section>
<style>
  @media screen and (max-width: 768px) {
    .mobile-hide {
    display: none !important;
}
  }
  @media screen and (min-width: 769px) {
    .desktop-hide {
    display: none !important;
}
  }

</style>
