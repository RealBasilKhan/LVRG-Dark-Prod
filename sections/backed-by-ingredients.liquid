<section class="container">
  <div class="row number-flex">
    <div class="col-1">
      <h1>{{ section.settings.heading }}</h1>


 <button class="your-custom-trigger-class custom-btn mobile_none">View Pop-up</button>

      
    </div>
    <div class="col-2">
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat1 }}</h1>
        </div>
        <p>{{ section.settings.desc1 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat2 }}</h1>
        </div>
        <p>{{ section.settings.desc2 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid"
            loading="lazy"
          />
          <h1>{{ section.settings.stat3 }}</h1>
        </div>
        <p>{{ section.settings.desc3 }}</p>
      </div>
   
    <button class="your-custom-trigger-class custom-btn desktop_none">View Pop-up</button>

    <div class="your-custom-popup-class" role="alert">
        <div class="your-custom-popup-container-class ">
              <div class="popup_information">Product information</div>
                <div class="popup_content_information">Nutritional Information</div>
                <img src="https://cdn.shopify.com/s/files/1/0811/5263/9274/files/Supplement_Label_f53c71ef-7248-4aa2-90f5-d39bc03f2a5d.webp?v=1695385846" loading="lazy" alt="Image 1">
            <a href="#0" class="your-custom-popup-close-class img-replace">X</a>
        </div> 
    </div>
 

       
    </div>
  </div>
             
</section>
        <style>
    .img-replace {
       display: inline-block;
       overflow: hidden;
       text-indent: 100%;
       color: transparent;
       white-space: nowrap;
   }
   
   .your-custom-popup-class {
       position: fixed;
       left: 0;
       top: 0;
       height: 100%;
       width: 100%;
       background-color: rgba(159,163,167,4);
      background: rgba(var(--color-overlay-rgb),.4);
       backdrop-filter: blur(7px);
       opacity: 0;
       visibility: hidden;
       -webkit-transition: opacity 0.3s 0s, visibility 0s 0.3s;
       -moz-transition: opacity 0.3s 0s, visibility 0s 0.3s;
       transition: opacity 0.3s 0s, visibility 0s 0.3s;
   }
   .your-custom-popup-container-class {
    padding-left: 30px;
    padding-right: 30px;
}
   .your-custom-popup-class.is-visible {
       opacity: 1;
       visibility: visible;
       -webkit-transition: opacity 0.3s 0s, visibility 0s 0s;
       -moz-transition: opacity 0.3s 0s, visibility 0s 0s;
       transition: opacity 0.3s 0s, visibility 0s 0s;
       z-index: 999;
   }
   
   .your-custom-popup-container-class {
       position: absolute;
       max-width: 540px;
       margin: 0 auto;
       right: 0;
       top: 0;
       height: 100%;
       background: #1F1F23;
       border-radius: .25em .25em .4em .4em;
       text-align: center;
       box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
       -webkit-transform: translatex(400px);
       -moz-transform: translatex(400px);
       -ms-transform: translatex(400px);
       -o-transform: translatex(400px);
       transform: translatex(400px);
       -webkit-backface-visibility: hidden;
       -webkit-transition-property: -webkit-transform;
       -moz-transition-property: -moz-transform;
       transition-property: transform;
       -webkit-transition-duration: 0.3s;
       -moz-transition-duration: 0.3s;
       transition-duration: 0.3s;
       overflow-y: scroll;
   }
   
   .your-custom-popup-container-class p {
       padding: 3em 1em;
   }
   
   .your-custom-popup-container-class .your-custom-popup-buttons-class:after {
       content: "";
       display: table;
       clear: both;
   }
   
   .your-custom-popup-container-class .your-custom-popup-buttons-class li {
       float: left;
       width: 50%;
       list-style: none;
   }
   
   .your-custom-popup-container-class .your-custom-popup-buttons-class a {
       display: block;
       height: 60px;
       line-height: 60px;
       text-transform: uppercase;
       color: #FFF;
       -webkit-transition: background-color 0.2s;
       -moz-transition: background-color 0.2s;
       transition: background-color 0.2s;
   }
   
   .your-custom-popup-container-class .your-custom-popup-buttons-class li:first-child a {
       background: #fc7169;
       border-radius: 0 0 0 .25em;
   }
   
   .no-touch .your-custom-popup-container-class .your-custom-popup-buttons-class li:first-child a:hover {
       background-color: #fc8982;
   }
   
   .your-custom-popup-container-class .your-custom-popup-buttons-class li:last-child a {
       background: #b6bece;
       border-radius: 0 0 .25em 0;
   }
   
   .no-touch .your-custom-popup-container-class .your-custom-popup-buttons-class li:last-child a:hover {
       background-color: #c5ccd8;
   }
   
   .your-custom-popup-container-class .your-custom-popup-close-class {
       position: absolute;
       top: 8px;
       right: 8px;
       width: 30px;
       height: 30px;
   }
   
   .your-custom-popup-container-class .your-custom-popup-close-class::before, .your-custom-popup-container-class .your-custom-popup-close-class::after {
       content: '';
       position: absolute;
       top: 12px;
       width: 14px;
       height: 3px;
       background-color: #8f9cb5;
   }
   
   .your-custom-popup-container-class .your-custom-popup-close-class::before {
       -webkit-transform: rotate(45deg);
       -moz-transform: rotate(45deg);
       -ms-transform: rotate(45deg);
       -o-transform: rotate(45deg);
       transform: rotate(45deg);
       left: 8px;
   }
   
   .your-custom-popup-container-class .your-custom-popup-close-class::after {
       -webkit-transform: rotate(-45deg);
       -moz-transform: rotate(-45deg);
       -ms-transform: rotate(-45deg);
       -o-transform: rotate(-45deg);
       transform: rotate(-45deg);
       right: 8px;
   }
   
   .is-visible .your-custom-popup-container-class {
       -webkit-transform: translateY(0);
       -moz-transform: translateY(0);
       -ms-transform: translateY(0);
       -o-transform: translateY(0);
       transform: translateY(0);
   }
  @media only screen and (max-width: 770px) {
    .mobile_none {
    display: none !important;
  }
     @media only screen and (min-width: 769px) {
       .desktop_none {
         display: none !important;
        }
     } 
    }     
   </style>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> 
    <script>
    jQuery(document).ready(function($) {
    $('.your-custom-trigger-class').on('click', function(event) {
        event.preventDefault();
        $('.your-custom-popup-class').addClass('is-visible');
    });
    $('.your-custom-popup-class').on('click', function(event) {
        if ($(event.target).is('.your-custom-popup-close-class') || $(event.target).is('.your-custom-popup-class')) {
            event.preventDefault();
            $(this).removeClass('is-visible');
        }
    });
    $(document).keyup(function(event) {
        if (event.which == '27') {
            $('.your-custom-popup-class').removeClass('is-visible');
        }
    });
});
    </script>
            
