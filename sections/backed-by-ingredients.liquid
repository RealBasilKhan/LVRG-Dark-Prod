{{ 'backed-by-ingredients.css' | asset_url | stylesheet_tag }}

<!-- READ EVERY COMMENT CAREFULLY PLEASE -->
<section class="container">
  <div class="row number-flex">
    <div class="col-1">
      <h1>{{ section.settings.heading }}</h1>


  <button class="customization_popup_trigger custom-btn custom-btn2" data-target="content1">Button One</button>

      
    </div>
    <div class="col-2">
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat1 }}</h1>
        </div>
        <p>{{ section.settings.desc1 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat2 }}</h1>
        </div>
        <p>{{ section.settings.desc2 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid"
            loading="lazy"
          />
          <h1>{{ section.settings.stat3 }}</h1>
        </div>
        <p>{{ section.settings.desc3 }}</p>
      </div>
   
   <button class="customization_popup_trigger custom-btn custom-btn2" data-target="content2">button Two</button>
   

       
    </div>
  </div>
        <div class="customization_popup" role="alert">
        <div class="customization_popup_container">
            <div id="content1" class="customization_popup_content">
                <div class="popup_information">test One</div>
                <div class="popup_content_information">Testing One</div>
                <img src="https://cdn.shopify.com/s/files/1/0811/5263/9274/files/Supplement_Label_f53c71ef-7248-4aa2-90f5-d39bc03f2a5d.webp?v=1695385846" loading="lazy" alt="Image 1">
                <a href="#0" class="customization_popup_close img-replace">X</a>
            </div>
            <div id="content2" class="customization_popup_content">
            <div class="popup_information">test Two</div>
                <div class="popup_content_information">Testing Two</div>
                <img src="https://cdn.shopify.com/s/files/1/0811/5263/9274/files/Group_58_2.png?v=1695392239" loading="lazy" alt="Image 2">
                <a href="#0" class="customization_popup_close img-replace">X</a>
            </div>
        </div>
    </div>       
</section>

