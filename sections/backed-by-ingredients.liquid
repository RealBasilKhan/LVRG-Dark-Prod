{{ 'backed-by-ingredients.css' | asset_url | stylesheet_tag }}

<!-- READ EVERY COMMENT CAREFULLY PLEASE -->
<section class="container">
  <div class="row number-flex">
    <div class="col-1">
      <h1>{{ section.settings.heading }}</h1>
  {% if block.settings.button_text_one != blank %}
    <button class="customization_popup_trigger custom-btn custom-btn2" data-target="content1">{{ block.settings.button_text_one }}</button>
  {% endif %}
    </div>
    <div class="col-2">
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat1 }}</h1>
        </div>
        <p>{{ section.settings.desc1 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid arrow-up"
            loading="lazy"
          />
          <h1>{{ section.settings.stat2 }}</h1>
        </div>
        <p>{{ section.settings.desc2 }}</p>
      </div>
      <div class="box">
        <div class="number-arrow">
          <image
            src="{{ section.settings.arrow | img_url: 'small' }}"
            alt="Arrow"
            class="img-fluid"
            loading="lazy"
          />
          <h1>{{ section.settings.stat3 }}</h1>
        </div>
        <p>{{ section.settings.desc3 }}</p>
      </div>
      <div class="btn btn-mobile">
        <a href="#" class="only-laptop only-destop">{{ section.settings.button }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Backed By Ingredients",
  "settings": [
    {
      "type": "image_picker",
      "label": "Arrow",
      "id": "arrow"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Backed By Ingredients"
    },
    {
      "type": "text",
      "id": "stat1",
      "label": "Stat 1",
      "default": "100%"
    },
    {
      "type": "textarea",
      "id": "desc1",
      "label": "Description 1",
      "default": "of our products are made with natural ingredients"
    },
    {
      "type": "text",
      "id": "stat2",
      "label": "Stat 2",
      "default": "100%"
    },
    {
      "type": "textarea",
      "id": "desc2",
      "label": "Description 2",
      "default": "of our products are made with natural ingredients"
    },
    {
      "type": "text",
      "id": "stat3",
      "label": "Stat 3",
      "default": "100%"
    },
    {
      "type": "textarea",
      "id": "desc3",
      "label": "Description 3",
      "default": "of our products are made with natural ingredients"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Backed By Ingredients",
      "category": "Backed By Ingredients"
    }
  ]
}
{% endschema %}
