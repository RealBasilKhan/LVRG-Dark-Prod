  <style>
 .my-img-replace {
    display: inline-block;
    overflow: hidden;
    text-indent: 100%;
    color: transparent;
    white-space: nowrap;
}
.my-popup-content-padding {
    padding-left: 30px;
    padding-right: 30px;
}
.my-popup-content {
    display: none;
    padding-left: 30px;
    padding-right: 30px;
}
.my-popup {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(159,163,167,4);
   background: rgba(var(--color-overlay-rgb),.4);
    backdrop-filter: blur(7px);
    opacity: 0;
    visibility: hidden;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    transition: opacity 0.3s 0s, visibility 0s 0.3s;
}
  .my-popup-content {
        display: none; 
    }
    .my-popup-content.active {
        display: block; 
    }
.my-popup.is-visible {
    opacity: 1;
    visibility: visible;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0s;
    transition: opacity 0.3s 0s, visibility 0s 0s;
    z-index: 999;
}
.my-popup-information {
    margin: unset;
    text-align: left;
    border-bottom: 1px solid black;
    padding-bottom: 20px;
    padding-top: 10px;
}
.my-popup-content-information {
    margin: 20px 0;
    width: 170px;
    border-bottom: 2px solid white;
}
.my-popup-container {
    position: absolute;
    max-width: 540px;
    margin: 0 auto;
    right: 0;
    top: 0;
    height: 100%;
    background: #1F1F23;
    border-radius: .25em .25em .4em .4em;
    text-align: center;
    -webkit-transform: translatex(400px);
    -moz-transform: translatex(400px);
    -ms-transform: translatex(400px);
    -o-transform: translatex(400px);
    transform: translatex(400px);
    -webkit-backface-visibility: hidden;
    -webkit-transition-property: -webkit-transform;
    -moz-transition-property: -moz-transform;
    transition-property: transform;
    -webkit-transition-duration: 0.3s;
    -moz-transition-duration: 0.3s;
    transition-duration: 0.3s;
    overflow-y: scroll;
}

.my-popup-container p {
    padding: 3em 1em;
}

.my-popup-container .my-popup-buttons:after {
    content: "";
    display: table;
    clear: both;
}

.my-popup-container .my-popup-buttons li {
    float: left;
    width: 50%;
    list-style: none;
}

.my-popup-container .my-popup-buttons a {
    display: block;
    height: 60px;
    line-height: 60px;
    text-transform: uppercase;
    color: #FFF;
    -webkit-transition: background-color 0.2s;
    -moz-transition: background-color 0.2s;
    transition: background-color 0.2s;
}

.my-popup-container .my-popup-buttons li:first-child a {
    background: #fc7169;
    border-radius: 0 0 0 .25em;
}

.no-touch .my-popup-container .my-popup-buttons li:first-child a:hover {
    background-color: #fc8982;
}

.my-popup-container .my-popup-buttons li:last-child a {
    background: #b6bece;
    border-radius: 0 0 .25em 0;
}

.no-touch .my-popup-container .my-popup-buttons li:last-child a:hover {
    background-color: #c5ccd8;
}

.my-popup-container .my-popup-close {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 30px;
    height: 30px;
}

.my-popup-container .my-popup-close::before, .my-popup-container .my-popup-close::after {
    content: '';
    position: absolute;
    top: 12px;
    width: 14px;
    height: 3px;
    background-color: #8f9cb5;
}

.my-popup-container .my-popup-close::before {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
    left: 8px;
}

.my-popup-container .my-popup-close::after {
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
    right: 8px;
}

.is-visible .my-popup-container {
    -webkit-transform: translateY(0);
    -moz-transform: translateY(0);
    -ms-transform: translateY(0);
    -o-transform: translateY(0);
    transform: translateY(0);
}
</style> 
          
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        jQuery(document).ready(function($) {
            $('.my-popup-trigger').on('click', function(event) {
                event.preventDefault();
                var target = $(this).data('target');
                $('.my-popup-content').removeClass('active');
                $('#' + target).addClass('active');
                $('.my-popup').addClass('is-visible');
            });
            $('.my-popup').on('click', function(event) {
                if ($(event.target).is('.my-popup-close') || $(event.target).is('.my-popup')) {
                    event.preventDefault();
                    $(this).removeClass('is-visible');
                }
            });
            $(document).keyup(function(event) {
                if (event.which == '27') {
                    $('.my-popup').removeClass('is-visible');
                }
            });
        });
    </script>
