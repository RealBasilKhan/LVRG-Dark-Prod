{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    // Heading
    {
        "type": "text",
        "label": "Table Heading",
        "id": "table_heading",
        "default": "Why are people choosing Suja?"
    },
    //Table Header
    {
        "type": "image_picker",
        "label": "Product1 Picture",
        "id": "product1_pic"
    },
    {
        "type": "text",
        "label": "Product1, Title",
        "id": "product1_title",
        "default": "Suja Organic Greens Powder"
    },

    {
        "type": "image_picker",
        "label": "Product2 Picture",
        "id": "product2_pic"
    },
    {
        "type": "text",
        "label": "Product2, Title",
        "id": "product2_title",
        "default": "Suja Organic Greens Powder"
    },

    {
        "type": "image_picker",
        "label": "Product3 Picture",
        "id": "product3_pic"
    },
    {
        "type": "text",
        "label": "Product3, Title",
        "id": "product3_title",
        "default": "Suja Organic Greens Powder"
    },

    {
        "type": "image_picker",
        "label": "Product4 Picture",
        "id": "product4_pic"
    },
    {
        "type": "text",
        "label": "Product4, Title",
        "id": "product4_title",
        "default": "Suja Organic Greens Powder"
    },
    {
        "type": "color",
        "label": "Background Color",
        "id": "background_color",
        "default": "#000"
    },
    {
        "type": "color",
        "label": "Font Color",
        "id": "font_color",
        "default": "#fff"
    },
    {
        "type": "color",
        "label": "Border Color",
        "id": "border_color",
        "default": "#fff"
    }
  ],

  "blocks" : [
    {
        "type": "table_row",
        "name": "Table Row",
        "settings":[
            {
                "type": "text",
                "label": "Row, Title",
                "id": "row_title",
                "default": "Functional Mushrooms"
            },
            {
                "type": "radio",
                "label": "Product1, newRow",
                "id": "product1_row_radio",
                "options": [
                  {
                    "value": "tick",
                    "label": "Tick"
                  },
                  {
                    "value": "cross",
                    "label": "Cross"
                  }
                ],
                "default": "cross"
            },
            {
                "type": "radio",
                "label": "Product2, newRow",
                "id": "product2_row_radio",
                "options": [
                  {
                    "value": "tick",
                    "label": "Tick"
                  },
                  {
                    "value": "cross",
                    "label": "Cross"
                  }
                ],
                "default": "cross"
            },
            {
                "type": "radio",
                "label": "Product3, newRow",
                "id": "product3_row_radio",
                "options": [
                  {
                    "value": "tick",
                    "label": "Tick"
                  },
                  {
                    "value": "cross",
                    "label": "Cross"
                  }
                ],
                "default": "cross"
            },
            {
                "type": "radio",
                "label": "Product4, newRow",
                "id": "product4_row_radio",
                "options": [
                  {
                    "value": "tick",
                    "label": "Tick"
                  },
                  {
                    "value": "cross",
                    "label": "Cross"
                  }
                ],
                "default": "cross"
            }
        ]
    }
  ],
  
  "presets" : [
    {
        "category": "Table",
        "name": "Table Sec"
    }
  ]
}
{% endschema %}
