                <th style="border-color: inherit"></th>
                <th style="border-color: inherit">
                    <img src="{{ section.settings.product1_pic | img_url: '100x100'}}"/>
                    <p> {{ section.settings.product1_title }} </p>
                </th>
                <th style="border-color: inherit">
                    <img src="{{ section.settings.product2_pic | img_url: '100x100'}}"/>
