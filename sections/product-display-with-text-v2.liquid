<style>

    .container_popup {
        text-align: center;
    }

    .content_popup {
        text-align: center;
        width: 100%;
        height: auto;
        background: black;
        padding: 10px 10px;
        border-radius: 20px 0px 0 20px;
        height: 100%;
    }

    #popup {
        position: fixed;
        right: -25%; /* Start the popup outside the viewport on the right */
        top: 0;
        width: 25%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8); /* Add background dimming with opacity */
        z-index: 999;
        overflow-y: scroll;
        transition: right 0.7s; /* Add smooth transition animation */
    }

    .open-call {
        padding: 15px 30px;
        font-size: 18px;
        cursor: pointer;
        margin-top: 100px;
    }

    .close-call {
        position: absolute;
        left: 10px;
        top: 10px;
        background: transparent;
        border: none;
        cursor: pointer;
        color: white;
        font-size: 40px;
    }

    /* Add styles to blur the background */
    body.blur {
        filter: blur(5px);
    }

    @media only screen and (max-width: 767px) {
        #popup {
            width: 60%;
        }
    }
</style>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".open-call").on("click", function (e) {
                e.preventDefault();
                $("body").addClass("blur"); /* Add blur class to the body */
                $("#popup").css("right", "0"); /* Slide the popup into view */
            });
            $(".close-call").click(function () {
                $("body").removeClass("blur"); /* Remove blur class from the body */
                $("#popup").css("right", "-25%"); /* Slide the popup out of view */
            });
        });
    </script>

    
